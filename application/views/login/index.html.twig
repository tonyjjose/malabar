{% extends "login/login_base.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
<section id="loginform">
    <h2>Login</h2>
    <form action="{{URL}}login/signin" method="post">
        <label for="user_email" autofocus>Email</label>
        <input type="email" name="user_email" />
        <label for="user_password">Password</label>
        <input type="password" name="user_password" required />
        <input type="submit" class="submit-button" value="Login"/>
    </form>
    <a href="{{URL}}login/register">Register</a>
    <p>Please contact our <a href="http://www.malabarbiblecourses.org/contact-us">manager</a> incase you forgot your password</p>
</section>
{% endblock %}