{% extends "login/login_base.html.twig" %}

{% block title %}Change password{% endblock %}
{% block nav %}
<li><a href="http://www.malabarbiblecourses.org">Malabar Bible Courses</a></li>
<li><a href="{{URL}}home">Home</a></li> {% endblock %}
{% block content %}
<section id="loginform">
    <h2>Change Password</h2>
    <form action="{{URL}}login/changePasswordSave" method="post">
        <label for="user_old_password">Old Password</label>
        <input type="text" name="user_old_password" id="user_old_password" maxlength="8" required/><br>
        <label for="user_new_password">New Password</label>
        <span class="desc">Choose a password that is 6-8 characters long</span>
        <input type="text" name="user_new_password" id="user_new_password" maxlength="8" required/><br>
        <input type="submit" class="submit-button" />
    </form>
</section>    
{% endblock %}