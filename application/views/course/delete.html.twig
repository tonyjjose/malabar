{% extends "layout.html.twig" %}

{% block title %}Login{% endblock %}

{# no feedback display needed here as this is just a confimation request page #}
{% block content %}
    <h1>Welcome</h1>
    <div class="content">
        <h2>Welcome to </h2>
        <p>Delete?</p>
        <div>
            <h1>Are you sure?</h1>
            <form action="{{URL}}course/deleteSave" method="post">
                <p> Are you sure to delete the course {{course_name}} ?
                    <input type="hidden" name="course_id" value="{{course_id}}">
                    <input type="submit" text="yes" class="course-submit-button" /><br>
                    <a href="{{URL}}course">No, Let me go back</a>
            </form>
        </div>        

    </div>  <!-- end content -->

{% endblock %}