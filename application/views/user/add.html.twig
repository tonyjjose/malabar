{% extends "layout.html.twig" %}

{% block title %}Login{% endblock %}

{% block feedback %}
    {% for feed in feedback_positive %}
        <span class="feedback success">{{feed|e }}</span>
    {% endfor %}
    {% for feed in feedback_negative %}
        <span class="feedback failure">{{feed|e }}</span>
    {% endfor %}    
{% endblock %}

{% block content %}
    <h1>Welcome</h1>
    <div class="content">
        <h2>Welcome to </h2>
        <p>Register to take a course</p>
        <div>
            <h1>Fill the form </h1>
            <form action="{{URL}}user/addSave" method="post">
                    <label>Email</label>
                    <input type="text" name="user_email" maxlength="64" required/><br>                
                    <label>Name</label>
                    <input type="text" name="user_name" maxlength="64" required/><br>
                    <label>Password</label>
                    <input type="text" name="user_password" maxlength="8" required/><br>
                    <label>Age</label>
                    <input type="text" name="user_age" maxlength="2" required/><br>   
                    <label>Sex</label>
                    <input type="radio" name="user_sex" value="M" checked>Male<br>
                    <input type="radio" name="user_sex" value="F">Female<br>

                    <label>Qualification</label>
                    <input type="text" name="user_qual" maxlength="20" /><br>     
                    <label>Bio</label>
                    <textarea id="user_bio" name="user_bio" maxlength="255" cols="30" rows="8" 
                        placeholder="A small introduction about yourself, if any"></textarea><br>
                    <label>Phone</label>
                    <input type="text" name="user_phone" maxlength="15"/><br>
                    <label>Mobile</label>
                    <input type="text" name="user_mobile" maxlength="15"/><br>
                    <label>Address</label>
                    <textarea id="user_address" name="user_address" maxlength="255" cols="10" rows="5" 
                        placeholder="Full postal address.."></textarea><br>  
                    <label>Course Mode</label>
                    <input type="radio" name="user_course_mode" value="E" checked>Email<br>
                    <input type="radio" name="user_course_mode" value="P">Postal<br>                         
                    <label>Anonymous (yes if checked)</label>
                    <input type="checkbox" name="user_anon" value="yes" ><br><br><br>

                    {# Manager specific options, will be shown only for manager #}
                    {% if showManagerControls %}
                        <label>User type</label>
                        <select name="user_type" size="3">
                                <option value='S' selected>Student</option>
                                <option value='I'>Instructor</option>
                                <option value='M'>Manager</option>
                        </select> <br>
                        <label>Approved</label>
                        <input type="checkbox" name="user_approved" value="yes" ><br> 
                        <label>Active</label>
                        <input type="radio" name="user_active" value="yes" checked>Active<br>
                        <input type="radio" name="user_active" value="no">Inactive<br>   
                    {% endif %}                                      

                    <input type="submit" class="user-submit-button" />
            </form>
        </div>        

    </div>  <!-- end content -->

{% endblock %}