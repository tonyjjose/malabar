{% extends "manager/manager_base.html.twig" %}

{% block title %}Student reports{% endblock %}
{% block content %}
<section>
        <h2>The list of all students</h2>
        <table>
            {# table head #}
            <tr><th>No</th><th>Name</th><th>ID</th><th>Email</th><th>Approved</th><th>Active</th><th>Anonymous</th><th>Joined</th>
            <th>Actions</th></tr>        
            {% for student in students %}
                <tr>
                    <td>{{loop.index}}</td><td>{{student.name}}</td><td>{{student.id}}</td>
                    <td>{{student.email}}</td>
                    <td> {% if student.approved == 1 %}Yes {% else %} No {% endif %}</td>
                    <td> {% if student.active == 1 %}Yes {% else %} No {% endif %}</td>
                    <td> {% if student.anonymous == 1 %}Yes {% else %} No {% endif %}</td>
                    <td>{{student.created}}</td>
                    <td><a href="{{URL}}manager/viewstudent/{{student.id}}">View</a></td>                   
                </tr>
            {% endfor %}
        </table>
</section>
{% endblock %}