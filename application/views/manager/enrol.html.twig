{% extends "layout.html.twig" %}

{% block title %}Login{% endblock %}

{# no feedback display needed here as this is just a confimation request page #}
{% block content %}
    <h1>Enrol</h1>
    <div class="content">
        <h2>Welcome to </h2>
        <p></p>
        <div>
            <h1>Select the course and instructor to enrol to..</h1>
                Student Name: {{student.name}} <br>
                Stident Email: {{student.email}}<br>

            <form action="{{URL}}manager/enrolSave" method="post">

                
                
                    <input type="hidden" name="student_id" value="{{student.id}}">
                    <label>Select Course</label>
                                        <select name="course_id" size="3">
                        {% for course in courses %}
                            <option value="{{course.id}}" >{{course.name}}</option>
                        {% endfor %}
                    </select>                    
                    <label>Select Instructor</label>
                                        <select name="instructor_id" size="3">
                        {% for instructor in instructors %}
                            <option value="{{instructor.id}}">{{instructor.name}}</option>
                        {% endfor %}
                    </select>
                    <label>Status</label>
                    <select name="status" size="3">
                        <option value="A"Selected>Active</option>
                        <option value="I">Inactive</option>
                        <option value="C">Completed</option>
                    </select>
                    <input type="submit" text="yes" class="submit-button" />
            </form>
        </div>        

    </div>  <!-- end content -->

{% endblock %}