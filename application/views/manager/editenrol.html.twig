{% extends "layout.html.twig" %}

{% block title %}Login{% endblock %}

{# no feedback display needed here as this is just a confimation request page #}
{% block content %}
    <h1>Enrol</h1>
    <div class="content">
        <h2>Welcome to </h2>
        <p></p>
        <div>
            <h1>Select the course to enrol to..</h1>
                Student Name: {{student.name}} <br>
                Stident Email: {{student.email}}<br>

                Course: {{course.name}}

            <form action="{{URL}}manager/enrolEditSave" method="post">

                
                
                    <input type="hidden" name="student_id" value="{{student.id}}">
                    <input type="hidden" name="course_id" value="{{course.id}}">
                    
                    <label>Select Instructor</label>
                                        <select name="instructor_id" size="3">
                        {% for instructor in instructors %}
                            <option value="{{instructor.id}}" {% if instructor.id == courseInstance.instructor.id %}
                                Selected {% endif %}>{{instructor.name}}</option>
                        {% endfor %}
                    </select>
                    <label>Status</label>
                    <select name="status" size="3">
                        <option value="A"{% if courseInstance.status == 'A' %} Selected {% endif %}>Active</option>
                        <option value="I"{% if courseInstance.status == 'I' %} Selected {% endif %}>Inactive</option>
                        <option value="C"{% if courseInstance.status == 'C' %} Selected {% endif %}>Completed</option>
                    </select>
                    <input type="submit" text="yes" class="submit-button" />
            </form>
        </div>        

    </div>  <!-- end content -->

{% endblock %}