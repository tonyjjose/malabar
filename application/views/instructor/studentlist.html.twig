{% extends "instructor/instructor_base.html.twig" %}

{% block title %}Course Students{% endblock %}

{% block content %}
<section class="dash">    
    <h2>Course Students</h2>
    <p>The list of all students doing the course <span class="bold">"{{course.name}}"</span></p>
    <table>
    {# table head #}
    <tr><th>No</th><th>Name</th><th>Email</th><th>Mobile</th><th>Approved</th><th>Anonymous</th></tr>        
    {% for student in students %}
    <tr>
        <td>{{loop.index}}</td><td><a href="{{URL}}profile/view/{{student.id}}">{{student.name}}</a></td>
        <td>{{student.email}}</td><td>{{student.mobile}}</td>
        <td> {% if student.approved == 1 %}Yes {% else %} No {% endif %}</td>
        <td> {% if student.anonymous == 1 %}Yes {% else %} No {% endif %}</td>
    </tr>
    {% endfor %}
    </table>
</section>
{% endblock %}