{% extends "instructor/instructor_base.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block content %}
<section class="dash">
    <h2>Dashboard</h2>
        <summary id="user_meta">
            <p><span class="profile">Name :</span>{{user.name}}</p>
            <p><span class="profile">Email :</span>{{user.email}}</p>
            <p><span class="profile">Phone :</span>{{user.phone}} , {{user.mobile}}</p>
            <p><span class="profile">Registered on :</span>{{user.created}}</p>
        </summary>
        <a href="{{URL}}profile/edit">Edit my profile</a><br>
        <a href="{{URL}}profile/changepassword">Change my password</a>
</section>
<section class="dash">          
    <h2>Your courses</h2>

    
        <table>
            {# table head #}
            <tr><th>No</th><th>Course</th><th>Desc</th><th>Status</th><th>Actions</th></tr>

            {# list the users #}             
            {% for  course in courses %}
                <tr>
                    <td>{{loop.index}}</td><td>{{course.name}}</td><td>{{course.description}}</td>
                    <td>{% if course.active %} Yes {% else %} No {% endif %}</td><td><a href="{{URL}}instructor/showstudents/{{user.id}}/{{course.id}}/">Show my course students</a></td>
                </tr>
            {% endfor %}
        </table>

</section>
<section class="dash">
    <h2>Latest Assignments</h2>    
    <a href="">Links to assignments uploaed by students</a>
</section>
{% endblock %}