{% extends "layout.html.twig" %}

{% block title %}Login{% endblock %}

{% block feedback %}
    {% for feed in feedback_positive %}
        <span class="feedback success">{{feed|e }}</span>
    {% endfor %}
    {% for feed in feedback_negative %}
        <span class="feedback failure">{{feed|e }}</span>
    {% endfor %}    
{% endblock %}

{% block content %}
    <h1>Welcome</h1>
    <div class="content">
        <h2>Dashboard</h2>
        <p>This is the page of instructor..We will list his courses along with its instructor if assigned.
            There will be an option for him to upload assignments.
            There will be a link to view/edit his profile. </p>

            <h2>Welcome {{instructor.name}}</h2>
            
            <h2>Your courses</h2>

    
        <table>
            {# table head #}
            <tr><th>No</th><th>Course</th><th>Desc</th><th>Status</th><th>Actions</th></tr>

            {# list the users #}             
            {% for  course in courses %}
                <tr>
                    <td>{{loop.index}}</td><td>{{course.name}}</td><td>{{course.description}}</td>
                    <td>{% if course.active %} Yes {% else %} No {% endif %}</td><td><a href="{{URL}}instructor/showstudents/{{instructor.id}}/{{course.id}}/">Show my course students</a></td>
                </tr>
            {% endfor %}
        </table>


    </div>  <!-- end content -->

{% endblock %}